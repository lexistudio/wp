*
  outline: none

html, body
  height: 100%

body
  font-family: 'Raleway', sans-serif

.container
  width: 1170px
  margin: auto
  padding: 0 20px
  @media (max-width: desktop)
    width: 940px
  @media (max-width: tablet)
    width: 736px
    padding: 0 15px
  @media (max-width: phone)
    width: 100%
    box-sizing: border-box

.grid:before
  content: ""
  width: 1170px
  margin: auto
  position: fixed
  top: 0
  bottom: 0
  left: 0
  right: 0
  z-index: 99999
  background: -webkit-linear-gradient(left, rgba(255,0,0,.2) 70px, transparent 70px)
  background-size: 100px
  pointer-events: none
  @media (max-width: desktop)
    width: 940px
    background: -webkit-linear-gradient(left, rgba(255,0,0,.2) 60px, transparent 60px)
    background-size: 80px
  @media (max-width: tablet)
    width: 736px
    background: -webkit-linear-gradient(left, rgba(255,0,0,.2) 43px, transparent 43px)
    background-size: 63px

.wrapper
  min-height: 100%

.title
  text-align: center
  text-transform: uppercase
  font-size: 50px
  line-height: 1
  margin: 0
  color: #233142
  padding: 119px 0 0
  &--white
    color: colors_white
  @media (max-width: desktop)
    font-size: 45px
    padding-top: 99px
  @media (max-width: tablet)
    font-size: 37px
    padding-top: 70px
  @media (max-width: phone)
    font-size: 30px
    padding-top: 56px

.btn
  -webkit-appearance: none
  -moz-appearance: none
  appearance: none
  border: 0
  border-radius: 0
  display: inline-block
  text-align: center
  height: 45px
  color: colors_white
  background: colors_default
  text-decoration: none
  font-size: 16px
  line-height: 45px
  padding: 0 25px
  font-weight: bold
  text-transform: uppercase
  -webkit-user-select: none
  -moz-user-select: none
  user-select: none
  transition: background .1s linear
  &:hover
    background: darken(colors_default, 15%)
  &--dark
    background: colors_dark
    &:hover
      background: darken(colors_dark, 15%)
  @media (max-width: desktop)
    font-size: 14px

a
  color: colors_dark
  &:hover
    text-decoration: none